<div class="create--form">
<h2>記事作成</h2>
<%= form_with model: @article, local: true do |f| %>
  <%= f.label :タイトル %><br>
  <%= f.text_field :title, placeholder: 'タイトル', value: @article.title, class: :textbox %><br>
  <%= f.label :本文 %><br>
  <%= f.text_area :content, placeholder: '本文', value: @article.content,class: :textbox, style: 'height: 400px;' %><br>
  <%= f.label :画像 %><br>
  <%= f.file_field :image, id: :article_img %><br>
  <% if @article.image? %>
    <%= image_tag @article.image.url, id: :img_prev %><br>
  <% else %>
    <%= image_tag '', id: :img_prev %><br>
  <% end %>
  <%= f.label :画像を削除する %>
  <%= f.check_box :remove_image %>
  <%= f.submit :更新する, class: :submit_btn %>
<% end %>
</div>